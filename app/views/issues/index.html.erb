<p id="notice"><%= notice %></p>

<h1>Listing Issues</h1>

<table>
  <thead>
    <tr>
      <th>Repository</th>
      <th>Name</th>
      <th>Severity</th>
      <th>Description</th>
      <th>Reference url</th>
      <th>Dependency</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.repository_id %></td>
        <td><%= issue.name %></td>
        <td><%= issue.severity %></td>
        <td><%= issue.description %></td>
        <td><%= issue.reference_url %></td>
        <td><%= issue.dependency %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
